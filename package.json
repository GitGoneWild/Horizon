{
  "name": "horizon-browser",
  "productName": "Horizon",
  "version": "0.1.0",
  "description": "A futuristic, secure, and privacy-focused web browser built with Electron - Fast. Secure. Private. ðŸš€",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development electron .",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "build": "npm run build:renderer && electron-builder",
    "build:renderer": "node scripts/build-renderer.js",
    "package": "electron-builder --dir",
    "package:win": "electron-builder --win",
    "package:mac": "electron-builder --mac",
    "package:linux": "electron-builder --linux",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "browser",
    "electron",
    "chromium",
    "secure",
    "privacy",
    "fast"
  ],
  "author": "Horizon Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/GitGoneWild/Horizon.git"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "@jest/globals": "^29.7.0"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "keytar": "^7.9.0",
    "uuid": "^9.0.1"
  },
  "build": {
    "appId": "com.horizon.browser",
    "productName": "Horizon",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": ["dmg", "zip"]
    },
    "win": {
      "target": ["nsis", "portable"]
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Network"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": ["**/tests/**/*.test.js"],
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/renderer/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 20,
        "functions": 15,
        "lines": 20,
        "statements": 20
      }
    }
  }
}
